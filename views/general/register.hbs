
 <body>
 
 
  
  <br>
<div class="reg">
  <h1 class="t1">Hello there!</h1>
  <h2 class="t1">Create your account to get our services</h2>
  <br>
  <form id="registration-form" action="/register" method="POST">
    <fieldset><legend>Sign Up</legend>
      
    <label class="info" for="fname">First Name</label>
    <input type="text" id="fname" name="firstname"  placeholder="Enter Your First Name" value="{{values.firstname}}" spellcheck="false" autocomplete="given-name">
    {{{fieldCheck "firstname" validationMessages}}}
  <br>
    <label class="info" for="lname">Last Name</label>
    <input type="text" id="lname" name="lastname"  placeholder="Enter Your Last Name" value="{{values.lastname}}" spellcheck="false" autocomplete="family-name">
    {{{fieldCheck "lastname" validationMessages}}}
		
   <br>
    <label class="info" for="email">Email Address</label>
    <input type="email" id="email" name="email"  placeholder="Enter Your Email Address" value="{{values.email}}" spellcheck="false">
    {{{fieldCheck "email" validationMessages}}}
<br>
    <label class="info" for="password">Password</label>
    <input type="password" id="password" name="password"  placeholder="Enter Your Password" value="{{values.password}}" spellcheck="false">
    {{{fieldCheck "password" validationMessages}}}
<br>
<br>

     <div class="form-reg">
                    <input type="submit" value="Sign Up Now" class="btn-reg">
                </div>
</fieldset>
</form>
</div>
<br>



</body>
